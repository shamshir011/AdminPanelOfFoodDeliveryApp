    <TextView
        android:id="@+id/uploadData"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/delete_button_design"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/upload"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewDeliveryDuration">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/cbPizza"
                android:layout_width="94dp"
                android:layout_height="43dp"
                android:layout_marginStart="8dp"
                android:text="@string/pizza"
                android:textColor="#717171"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/cbItalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/italian"
                android:textColor="#717171"
                app:layout_constraintBottom_toBottomOf="@+id/cbPizza"
                app:layout_constraintEnd_toStartOf="@+id/cbFastFood"
                app:layout_constraintStart_toEndOf="@+id/cbPizza"
                app:layout_constraintTop_toTopOf="@+id/cbPizza" />

            <CheckBox
                android:id="@+id/cbFastFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/fast_food"
                android:textColor="#717171"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>